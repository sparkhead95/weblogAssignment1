<p id="notice"><%= notice %></p>
<h1>Posts</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td> 
        <td><%= post.body %></td>
	<% if (post.user) %>
	<td> <%= link_to "#{post.user.email}" %> </td>
	<% else %>
	<td> Anonymous </td>
	<% end %>
	<td style="padding-left:3px;"><%= link_to 'Show', post %></td>
        <td style="padding-left:3px;"><%= link_to 'Edit', edit_post_path(post) %></td>
        <td style="padding-left:3px;"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

