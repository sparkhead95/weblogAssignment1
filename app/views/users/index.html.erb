<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= link_to(image_tag('eye.jpg',alt:'Show', title:'Show details',border:'0'), user_path(user,page: @users.current_page))%></td>
        <td><%= link_to(image_tag('edit.png',alt:'Edit', title:'Edit item',border:'0'), edit_user_path(user,page: @users.current_page))%></td>
        <td><%= link_to(image_tag('destroy.gif',alt:'Destroy', title:'Destroy item',border:'0'), user_path(user,page: @users.current_page),data: {confirm:'Are you sure?'}, method: :delete)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
        <div>
        <%=page_entries_info @users%>
        </div>
<%=will_paginate @users,container:false%>
</div>
<br>


<%= link_to 'New User', new_user_path(page: @users.current_page) %>

